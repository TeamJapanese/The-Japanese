# Telegram API credentials
# Replace with your API credentials from https://my.telegram.org/auth
API_ID=your_api_id           # Your Telegram API ID
API_HASH=your_api_hash       # Your Telegram API Hash

# Bot authentication
# Replace with your bot token from @BotFather
BOT_TOKEN=your_bot_token     # Your Telegram Bot Token

# String Session for logging in without using credentials
# This is generated using Pyrogram. Set it to None if you want to use regular login.
STRING_SESSION=your_string_session  # Your Pyrogram String Session 

CHAT_ID=your_chat_id_here

# Logging configuration
# Set to True to enable detailed logging, or False for less verbose output
ENABLE_LOGGING=True          # Enable logging (True or False)
LOG_LEVEL=DEBUG              # Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL

# Database configuration (if applicable)
# Set up your database settings if your bot requires a database connection
DATABASE_URL=sqlite:///sessions.db    # SQLite DB or provide a URL for PostgreSQL/MySQL

# Session persistence settings
SESSION_EXPIRE_IN_DAYS=30    # Number of days after which session expires (default: 30)

# API rate limits and timeout settings
API_TIMEOUT=30                # API call timeout in seconds
REQUEST_RETRY_LIMIT=5        # Number of retries for failed requests

# Optional: Proxy configuration (if required for the deployment environment)
# Enable the proxy if you're behind a firewall or need it for privacy
USE_PROXY=False              # Set to True to use a proxy
PROXY_URL=socks5://localhost:1080  # Example of a SOCKS5 proxy URL

# Optional: Custom message handler configuration
# Set to True to enable a custom greeting message handler
ENABLE_GREETING=True         # Enable greeting message handler (True or False)
GREETING_MESSAGE="Hello, welcome to the bot!"  # Custom greeting message
