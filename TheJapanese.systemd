[Unit]
Description=The Japanese Bot
After=network.target

[Service]
ExecStart=/usr/bin/python3 /path/to/your/project/Telegram/__main__.py
WorkingDirectory=/path/to/your/project
User=your_vps_user
Group=your_vps_group
Restart=always

[Install]
WantedBy=multi-user.target

sudo systemctl enable the_japanese_bot
sudo systemctl start the_japanese_bot

# Only for Linux User systemd
